class GSharedLinkedList<T> {
    public local T data;
    public shared[RList1] GSharedLinkedList<T> next;

    public GSharedLinkedList(local T data) {
        this.data = data;
    }

    public local T getData() {
        return this.data;
    }

    public local T setData(local T data) {
        return this.data = data;
    }

    public shared[RList1] GSharedLinkedList<T> getNext() {
        return this.next;
    }

    public void setNext(shared[RList1] GSharedLinkedList<T> next) {
        this.next = next;
    }
}

restriction RList1 for GSharedLinkedList {
    allows getData;
    allows setData;
    allows getNext;
    allows setNext;
}

public class AntidoteTest3 {
    public static void main(local String[] args) {
        shared[RList1] GSharedLinkedList<String> node1 = new GSharedLinkedList<String>("node1");

        // Check node 1
        assert (node1.getData().equals("node1"));
        assert (node1.getNext() == null);
        
        shared[RList1] GSharedLinkedList<String> node2 = new GSharedLinkedList<String>("node2");

        // Check node 2
        assert (node2.getData().equals("node2"));
        assert (node2.getNext() == null);

        // Add node 2 as the next node for node 1
        node1.setNext(node2);
        // can't call .equals for now...
        assert (node1.getNext().getData().equals(node2.getData()));

        // Update node 2 on it's own
        node2.setData("CHANGED");

        // Follow the path of node 1 to node 2 and confirm that the value changed
        assert (node2.getData().equals("CHANGED"));
        assert (node1.getNext().getData().equals("CHANGED"));
    }
}